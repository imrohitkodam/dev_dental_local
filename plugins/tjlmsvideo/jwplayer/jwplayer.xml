	<author>Techjoomla</author>
	<creationDate>12th Dec 2013</creationDate>
	<copyright>(C)techjoomla.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>contact@techjoomla.com</authorEmail>
	<authorUrl>www.techjoomla.com</authorUrl>
	<version>1.0</version>
	<isapplication>true</isapplication>
	<description>Techjoomla-LMS JWPlayer Video API</description>

	<files>
		<file plugin="jwplayer">jwplayer.php</file>
		<folder>jwplayer</folder>
	</files>
	<languages folder="language">
			<language tag="en-GB">en-GB/en-GB.plg_tjlmsvideo_jwplayer.ini</language>
	</languages>

	<!-- Fields for Joomla 1.6.x and onwards -->
	<config name="params">
		<fields name="params">
			<fieldset name="basic" label="PLG_TJLMSVIDEO_JWPLAYER_PARAMETER" >
				<field name="plugin_name" type="text" default="JWPlayer" label="PLG_TJLMSVIDEO_JWPLAYER_NAME" description="" />
				<field name="appkey" type="text" default="Dd6CJjWgEeSFtSIAC0MJiQ" label="PLG_TJLMSVIDEO_JWPLAYER_API_KEY" description="PLG_TJLMSVIDEO_JWPLAYER_API_KEY" />
			</fieldset>
		</fields>
	</config>
</extension>
