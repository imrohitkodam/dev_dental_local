	<config name="params">
		<fields name="params">
		<fieldset name="basic" label="PLG_EXERCISE_FORM_PARAMETER" >
			<field name="show_resume" type="hidden" default="0" label="PLG_TJQUIZ_QUIZ_SHOW_RESUME_LABEL" description="PLG_TJQUIZ_QUIZ_SHOW_RESUME_DESC" class="btn-group">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="assessment" type="hidden" default="0" value="0" label="PLG_TJQUIZ_ASSESMENT_LABEL" description="PLG_TJQUIZ_ASSESMENT_DESC" class="btn-group" />
		</fieldset>
		</fields>
	</config>
