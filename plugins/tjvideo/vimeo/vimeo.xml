<?xml version = "1.0" encoding = "utf-8" ?>
<extension version="3.0" type="plugin" group="tjvideo" method="upgrade">
	<name>PLG_TJVIDEO_VIMEO</name>
	<author>Techjoomla</author>
	<creationDate>10th Oct 2025</creationDate>
	<copyright>Copyright (C) 2014 - 2025 Techjoomla. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>https://techjoomla.com</authorUrl>
	<version>5.1.3</version>
	<description>PLG_TJVIDEO_VIMEO_DESC</description>

	<files>
		<file plugin="vimeo">vimeo.php</file>
		<folder>vimeo</folder>
		<folder>tmpl</folder>
	</files>
	<languages folder="language">
			<language tag="en-GB">en-GB/en-GB.plg_tjvideo_vimeo.ini</language>
			<language tag="en-GB">en-GB/en-GB.plg_tjvideo_vimeo.sys.ini</language>
	</languages>

	<!-- Fields for Joomla 1.8.x and onwards -->
	<config name="params">
		<fields name="params">
			<fieldset name="basic" label="PLG_TJVIDEO_VIMEO_PARAMETER" >
				<field name="plugin_name" type="text" default="Vimeo" label="PLG_TJVIDEO_VIMEO_NAME" description="PLG_TJVIDEO_VIMEO_NAME_DESC" />
				<field name="show_resume" type="radio" default="1" label="PLG_TJVIDEO_VIMEO_SHOW_RESUME_LABEL" description="PLG_TJVIDEO_VIMEO_SHOW_RESUME_DESC" class="btn-group">
 					<option value="1">JYES</option>
 					<option value="0">JNO</option>
	 			</field>
				<field name="assessment" type="hidden" default="0" label="PLG_TJVIDEO_VIMEO_ASSESMENT_LABEL" description="PLG_TJVIDEO_VIMEO_ASSESMENT_LABEL_DESC" class="btn-group">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="embedding_option" type="radio" default="iframe-script" label="PLG_TJVIDEO_VIMEO_EMBEDDING" description="PLG_TJVIDEO_VIMEO_EMBEDDING_DESC">
					<option value="iframe-html">PLG_TJVIDEO_VIMEO_EMBEDDING_PRECREATED_IFRAME</option>
					<option value="iframe-script">PLG_TJVIDEO_VIMEO_EMBEDDING_IFRAME_BY_SCRIPT</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
