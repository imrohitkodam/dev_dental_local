	<config name="params">
		<fields name="params">
			<fieldset name="basic" label="PLG_TJVIDEO_JWPLAYER_PARAMETER" >
				<field name="plugin_name" type="text" default="JWPlayer" label="PLG_TJVIDEO_JWPLAYER_NAME" description="PLG_TJVIDEO_JWPLAYER_NAME_DESC" />
				<field name="playerkey" type="text" default="" label="PLG_TJVIDEO_JWPLAYER_PLAYER_KEY" description="PLG_TJVIDEO_JWPLAYER_PLAYER_KEY_DESC" />

				<field name="assessment" type="hidden" default="1" label="PLG_JWPLAYER_VIDEO_ASSESMENT_LABEL" description="PLG_JWPLAYER_VIDEO_ASSESMENT_LABEL_DESC" class="btn-group" />
