	<fields name="app_params">
		<fieldset name="app_params">
				
			<field	name="vendor" 	
					default="" 		
					type="text" 	
					label="COM_PAYPLANS_APP_SAGEPAY_VENDOR_NAME"  
					description="COM_PAYPLANS_APP_SAGEPAY_VENDOR_NAME_DESC" 
					/>

			<field	name="vendorEmail" 	
					default="" 		
					type="text" 	
					label="Vendor Email"  
					description="Vendor Email" 
					/>

			<field	name="encryptionKey" 	
					default="" 		
					type="text" 	
					label="Encrypton Key"  
					description="Encryption Key" 
					/>
									
			<field  name="sandbox" 
	        		type="radio" 
	        		default="0" 
	        		class="btn-group"
	        		label="COM_PAYPLANS_APP_SAGEPAY_SANDBOX" 
	        		description="COM_PAYPLANS_APP_SAGEPAY_SANDBOX_DESC">
			        <option value="0">COM_PAYPLANS_NO</option>
			        <option value="1">COM_PAYPLANS_YES</option>
        	</field>
	        	
      		<field  name="allow_recurring_cancel" 
		    		type="radio" 
		    		default="0" 
		            class="btn-group"
		    		label="COM_PAYPLANS_APP_SAGEPAY_ALLOW_RECURRING_CANCEL" 
		    		description="COM_PAYPLANS_APP_SAGEPAY_ALLOW_RECURRING_CANCEL_DESC">
				    <option value="0">COM_PAYPLANS_NO</option>
				    <option value="1">COM_PAYPLANS_YES</option>
			</field>
	
		</fieldset>
	</fields>
<alias>pp-sagepay</alias>
<documentation>http://www.readybytes.net/payplans/documentation/item/sagepay.html</documentation>
<version>@app.version@.@app.buildversion@</version>
</config>
