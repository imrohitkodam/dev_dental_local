<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="tjtextmedia" method="upgrade">
	<name>PLG_TJTEXTMEDIA_NATIVEEDITOR</name>
	<author>Techjoomla</author>
	<creationDate>10th Oct 2025</creationDate>
	<copyright>Copyright (C) 2014 - 2025 Techjoomla. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>https://techjoomla.com</authorUrl>
	<version>5.1.3</version>
	<description>PLG_TJTEXTMEDIA_NATIVEEDITOR</description>

	<files>
		<file plugin="nativeeditor">nativeeditor.php</file>
		<folder>nativeeditor</folder>
		<folder>tmpl</folder>
	</files>
	<languages folder="language">
			<language tag="en-GB">en-GB/en-GB.plg_tjtextmedia_nativeeditor.ini</language>
			<language tag="en-GB">en-GB/en-GB.plg_tjtextmedia_nativeeditor.sys.ini</language>
	</languages>

	<!-- Fields for Joomla 1.8.x and onwards -->
	<config name="params">
		<fields name="params">
			<fieldset name="basic" label="PLG_TJTEXTMEDIA_NATIVEEDITOR_PARAMETER" >
				<field name="plugin_name" type="text" default="Simple WYSIWYG Editor" label="PLG_TJTEXTMEDIA_NATIVEEDITOR_NAME" description="" />
				<field name="show_resume" type="radio" default="1" label="PLG_TJTEXTMEDIA_NATIVE_EDITOR_SHOW_RESUME_LABEL" description="PLG_TJTEXTMEDIA_NATIVE_EDITOR_SHOW_RESUME_DESC" class="btn-group">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="assessment" type="hidden" default="0" label="PLG_TJTEXTMEDIA_NATIVE_EDITOR_ASSESMENT_LABEL" description="PLG_TJTEXTMEDIA_NATIVE_EDITOR_ASSESMENT_LABEL_DESC" class="btn-group" />
			</fieldset>
		</fields>
	</config>
</extension>
