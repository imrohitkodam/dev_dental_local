  <version>9.3.8</version>
  <creationDate>November 2025</creationDate>
  <author>Regular Labs (Peter van Westen)</author>
  <authorEmail>info@regularlabs.com</authorEmail>
  <authorUrl>https://regularlabs.com</authorUrl>
  <copyright>Copyright Â© 2025 Regular Labs - All Rights Reserved</copyright>
  <license>GNU General Public License version 2 or later</license>
  <namespace path="src">RegularLabs\Plugin\EditorButton\Snippets</namespace>
  <scriptfile>script.install.php</scriptfile>
  <files>
    <folder plugin="snippets">services</folder>
    <folder>language</folder>
    <folder>src</folder>
    <folder>tmpl</folder>
  </files>
  <media folder="media" destination="snippets">
    <folder>js</folder>
  </media>
  <config>
    <fields name="params" addfieldprefix="RegularLabs\Library\Form\Field">
      <fieldset name="basic">
        <field name="@load_language_regularlabs" type="LoadLanguage" extension="plg_system_regularlabs"/>
        <field name="@license" type="License" extension="SNIPPETS"/>
        <field name="@version" type="Version" extension="SNIPPETS"/>
        <field name="@dependency_component" type="Dependency" label="SNP_THE_COMPONENT" file="/administrator/components/com_snippets/snippets.xml"/>
        <field name="@dependency_plugin" type="Dependency" label="SNP_THE_SYSTEM_PLUGIN" file="/plugins/system/snippets/snippets.xml"/>
        <field name="@header" type="Header" label="SNIPPETS" description="SNIPPETS_DESC" url="https://regularlabs.com/snippets"/>
        <field name="@note__settings" type="Note" class="rl-alert alert alert-info rl-alert-light" text="SNP_SETTINGS,&lt;a href=&quot;index.php?option=com_snippets&quot; target=&quot;_blank&quot;&gt;,&lt;/a&gt;"/>
      </fieldset>
    </fields>
  </config>
</extension>
