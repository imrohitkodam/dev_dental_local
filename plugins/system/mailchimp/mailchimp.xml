<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0"  type="plugin" group="system" method="upgrade">
	<name>PLG_SYSTEM_MAILCHIMP</name>
	<author>Techjoomla</author>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>https://techjoomla.com</authorUrl>
	<copyright>Copyright (C) 2014 - 2025 Techjoomla. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<creationDate>10th Oct 2025</creationDate>
	<version>5.1.3</version>
	<description>PLG_TJLMS_SYSTEM_MAILCHIMP_DESC</description>

	<files>
		<folder>lib</folder>
		<filename plugin="mailchimp">mailchimp.php</filename>
	</files>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_mailchimp.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_mailchimp.sys.ini</language>
	</languages>
	<!-- Fields for Joomla 1.8.x and onwards -->
	<config name="params">
		<fields name="params">
			<fieldset name="basic" label="PLG_TJLMS_SYSTEM_MAILCHIMP_API_KEY" >
				<field name="api_key" type="text" default="" label="PLG_TJLMS_SYSTEM_MAILCHIMP_API_KEY" description="" />
			</fieldset>
		</fields>
		<fields name="params">
			<fieldset name="basic" label="PLG_TJLMS_SYSTEM_MAILCHIMP_LIST_ID" >
				<field name="list_id" type="text" default="" label="PLG_TJLMS_SYSTEM_MAILCHIMP_LIST_ID" description="" />
			</fieldset>
		</fields>
		<fields name="params">
			<fieldset name="basic" label="PLG_TJLMS_SYSTEM_MAILCHIMP_SUBSCRION_FIELD" >
				<field name="field_tag" type="text" default="COURSE_ID" label="PLG_TJLMS_SYSTEM_MAILCHIMP_SUBSCRION_FIELD" description="" />
			</fieldset>
		</fields>

	</config>
</extension>
