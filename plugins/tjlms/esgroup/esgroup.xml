	<config>
		<fields name="esgroup" addfieldpath="/plugins/tjlms/esgroup/models/fields/">
		<field type="spacer" class="tjintegration-label" label="PLG_TJLMS_ESGROUP" />
		<field name="coursegroup" class="btn-group cgroup" type="radio" default="select" description="COM_TJLMS_SELECT_ES_GROUP_FOR_COURSE_DESC" label="COM_TJLMS_SELECT_ES_GROUP_FOR_COURSE">
			<option value="select">COM_TJLMS_CONFIG_SELECT_ES_GROUP</option>
			<option value="create">COM_TJLMS_CONFIG_CREATE_ES_GROUP</option>
		</field>
		<field
			name="onAfterEnrollEsGroups" 
			type="easysocialgrouplist" 
			label="PLG_TJLMS_ESGROUP_AFTERENROLL_LABEL"
			description="PLG_TJLMS_ESGROUP_AFTERENROLL_DESC" 
			multiple="true">
		</field>
		<field name="groupCategory" type="groupcategories" label="COM_TJLMS_SELECT_GROUP_CAT" description="COM_TJLMS_SELECT_GROUP_CAT_DESC" />
		<field name="groupType" type="grouptype" label="COM_TJLMS_SELECT_GROUP_TYPE" description="COM_TJLMS_SELECT_GROUP_TYPE_DESC" />
