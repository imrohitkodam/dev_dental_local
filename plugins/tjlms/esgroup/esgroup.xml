	<version>1.0.0</version>
	<description>PLG_TJLMS_ESGROUP_XML_DESCRIPTION</description>
	<files>
		<filename plugin="esgroup">esgroup.php</filename>
		<folder>language</folder>
		<filename>esgroup.js</filename>
		<folder>models</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB.plg_tjlms_esgroup.ini</language>
		<language tag="en-GB">en-GB.plg_tjlms_esgroup.sys.ini</language>
