<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" method="upgrade" type="plugin" group="user">
	<name>Tjlms-User log</name>
	<author>Techjoomla</author>
	<creationDate>June 2012</creationDate>
	<copyright>(c)Techjoomla</copyright>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>http://www.techjoomla.com</authorUrl>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.0</version>
	<description>This is user plug-in will work on after user logged in and out to keep the user log.</description>
	<files>
		<filename plugin="plug_user_tjlms">plug_user_tjlms.php</filename>
	</files>
	<languages folder="language">
			<language tag="en-GB">en-GB/en-GB.plug_user_tjlms.ini</language>
  	</languages>
  	<config name="params">
		<fields name="params">
			<fieldset name="basic">
				<field name="admin_redirect_to_dashboard" type="radio" default="0"
					label="PLG_USER_TJLMS_ADMIN_REDIRECT" description="PLG_USER_TJLMS_ADMIN_REDIRECT_DESC">
					<option value="1">PLG_USER_TJLMS_YES</option>
					<option value="0">PLG_USER_TJLMS_NO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>

