<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_TJLMS_CARD_DEFAULT_STYLE">
		<message>
			<![CDATA[All Courses]]>
		</message>
	</layout>
	<fields name="request">
		<fieldset name="request" label="COM_MENUS_LAYOUTs_FEATURED_OPTIONS">
			<field name="courses_to_show" type="list"
				description="COM_TJLMS_MENU_COURSES_TO_SHOW_DESC"
				label="COM_TJLMS_MENU_COURSES_TO_SHOW" class="btn-group" default="all">
				<option value="all">COM_TJLMS_MENU_COURSES_ALL_WITHACCESS</option>
				<option value="liked">COM_TJLMS_MENU_COURSES_LIKED</option>
				<option value="enrolled">COM_TJLMS_MENU_COURSES_ENROLLED</option>
				<option value="recommended">COM_TJLMS_MENU_COURSES_RECOMENDED</option>
				<option value="completed">COM_TJLMS_MENU_COURSES_COMPLETED</option>
				<option value="inprogress">COM_TJLMS_MENU_COURSES_INPROGRESS</option>
			</field>
		</fieldset>
	</fields>
	<!-- Add fields to the parameters object for the layout. -->
	<fields name="params">
		<fieldset name="advanced" label="COM_MENUS_LAYOUT_FEATURED_OPTIONS">
			<field name="show_courses_from_cat" type="category"
				label="COM_TJLMS_MENU_SELECT_CAT"
				description="COM_TJLMS_MENU_SELECT_CAT_DESC"
				extension="com_tjlms"
				>
					<option value=''>COM_TJLMS_MENU_FIELD_OPTION_SELECT_CAT</option>
			</field>

			<field name="show_subcat_courses" showon="show_courses_from_cat!:" type="list"
				label="COM_TJLMS_MENU_SHOW_SUBCATS"
				description="COM_TJLMS_MENU_SHOW_SUBCATS"
				default="0"
				>
					<option value='1'>JYES</option>
					<option value='0'>JNO</option>
			</field>

			<field name="cat_pos_alignment"  type="radio" default="right" label="COM_TJLMS_MENU_FILTER_ALIGNMENT" description="COM_TJLMS_MENU_FILTER_ALIGNMENT_DESC" class="btn-group" >
				<option value="left">COM_TJLMS_MENU_ALIGN_LEFT</option>
				<option value="right">COM_TJLMS_MENU_ALIGN_RIGHT</option>
				<option value="none">COM_TJLMS_MENU_ALIGN_NONE</option>
			</field>

			<field name="layout_to_load" type="list" description="COM_TJLMS_MENU_LAYOUT_TO_SHOW" label="COM_TJLMS_MENU_LAYOUT_TO_SHOW" class="btn-group" default="pin_layout">
				<option value="masonrypin">COM_TJLMS_MENU_PIN_MASONRY_LAYOUT</option>
				<option value="fixedheight">COM_TJLMS_MENU_FIXED_HEIGHT_PIN_LAYOUT</option>
				<option value="list">COM_TJLMS_MENU_LIST_LAYOUT</option>
			</field>

			<!-- If layout to show is masonry -->
			<field name="pin_width" showon="layout_to_load:masonrypin" class="validate-numeric" type="text" default="220" label="COM_TJLMS_MENU_PIN_WIDTH" description="COM_TJLMS_MENU_PIN_WIDTH_DESC" />

			<field name="pin_padding" showon="layout_to_load:masonrypin" type="text" class="validate-numeric" default="5" label="COM_TJLMS_MENU_PIN_PADDING" description="COM_TJLMS_MENU_PADDING_DESC" />

			<!-- If layout to show is fixed height pin -->
			<field name="large_device_pin_class" showon="layout_to_load:fixedheight" type="list" default="col-lg-3" label="COM_TJLMS_MENU_LARGE_NO_OF_PINS" description="COM_TJLMS_MENU_LARGE_NO_OF_PINS_DESC">
				<option value="col-lg-12">1</option>
				<option value="col-lg-6">2</option>
				<option value="col-lg-4">3</option>
				<option value="col-lg-3">4</option>
				<option value="col-lg-2">6</option>
				<option value="col-lg-1">12</option>
			</field>


			<field name="medium_device_pin_class" showon="layout_to_load:fixedheight" type="list" default="col-md-3" label="COM_TJLMS_MENU_MEDIUM_NO_OF_PINS" description="COM_TJLMS_MENU_MEDIUM_NO_OF_PINS_DESC">
				<option value="col-md-12">1</option>
				<option value="col-md-6">2</option>
				<option value="col-md-4">3</option>
				<option value="col-md-3">4</option>
				<option value="col-md-2">6</option>
				<option value="col-md-1">12</option>
			</field>

			<field name="small_device_pin_class" showon="layout_to_load:fixedheight" type="list" default="col-sm-4" label="COM_TJLMS_MENU_SMALL_NO_OF_PINS" description="COM_TJLMS_MENU_SMALL_NO_OF_PINS_DESC">
				<option value="col-sm-12">1</option>
				<option value="col-sm-6">2</option>
				<option value="col-sm-4">3</option>
				<option value="col-sm-3">4</option>
				<option value="col-sm-2">6</option>
				<option value="col-sm-1">12</option>
			</field>

			<field name="xsmall_device_pin_class" showon="layout_to_load:fixedheight" type="list" default="col-xs-12" label="COM_TJLMS_MENU_XSMALL_NO_OF_PINS" description="COM_TJLMS_MENU_XSMALL_NO_OF_PINS_DESC">
				<option value="col-xs-12">1</option>
				<option value="col-xs-6">2</option>
				<option value="col-xs-4">3</option>
				<option value="col-xs-3">4</option>
				<option value="col-xs-2">6</option>
				<option value="col-xs-1">12</option>
			</field>


			<field name="pin_short_desc_char" type="text" default="100" label="COM_TJLMS_MENU_PIN_SHORT_DESC_CHAR" description="COM_TJLMS_MENU_PIN_SHORT_DESC_CHAR_DESC" />

			<field name="course_images_size" type="list" label="COM_TJLMS_MENU_IMAGE_LABEL" description="COM_TJLMS_MENU_IMAGE_DESC" class="btn-group" default="S_">
				<option value="S_">COM_TJLMS_COURSE_IMAGES_SIZE_SMALL</option>
				<option value="M_">COM_TJLMS_COURSE_IMAGES_SIZE_MEDIUM</option>
				<option value="L_">COM_TJLMS_COURSE_IMAGES_SIZE_LARGE</option>
			</field>
			<field name="cat_all_course_pagination_limit" type="text" default="20" label="COM_TJLMS_MENU_PAGINATION_LIMIT" description="COM_TJLMS_MENU_PAGINATION_LIMIT_DESC" />

			<field
				name="orderby_pri"
				type="list"
				label="COM_TJLMS_COURSES_ORDER_LABEL"
				description="COM_TJLMS_COURSES_ORDER_DESC"
				>
				<option value="order">COM_TJLMS_COURSE_ORDERING</option>
				<option	value="rorder">COM_TJLMS_COURSE_REVERSE_ORDERING</option>
				<option value="likes">COM_TJLMS_MOST_LIKES</option>
				<option value="rlikes">COM_TJLMS_LEAST_LIKES</option>
				<option value="enrolled">COM_TJLMS_ENROLLED_DESC</option>
				<option value="renrolled">COM_TJLMS_ENROLLED_ASC</option>
				<option value="rdate">COM_TJLMS_RECENTLY_CREATED</option>
				<option value="date">JGLOBAL_OLDEST_FIRST</option>
				<option value="alpha">JGLOBAL_TITLE_ALPHABETICAL</option>
				<option value="ralpha">JGLOBAL_TITLE_REVERSE_ALPHABETICAL</option>
				<option value="front">COM_TJLMS_FEATURED_ORDER</option>
				<option value="random">JGLOBAL_RANDOM_ORDER</option>
			</field>
			<field
				name="courses_layout"
				type="componentlayout"
				label="COM_TJLMS_COURSES_LAYOUT"
				description="COM_TJLMS_COURSES_LAYOUT_DESC"
				useglobal="true"
				extension="com_tjlms"
				showon="layout_to_load!:list"
				view="courses" 
				class="form-select" />

			<field name="search" type="radio"  default="1" description="COM_TJLMS_FILTER_SEARCH_FILTER_DESC" label="COM_TJLMS_FILTER_SEARCH_FILTER" class="btn-group btn-group-yesno radio">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>

			<field name="showfilters" default="basic" type="radio" description="COM_TJLMS_FILTER_SHOW_FILTER_DESC" label="COM_TJLMS_FILTER_SHOW_FILTER" class="btn-group btn-group-yesno radio">
				<option value="advanced">COM_TJLMS_SHOW_ADVANCED_FILTER</option>
				<option value="basic">COM_TJLMS_SHOW_BASIC_FILTER</option>
				<option value="both">COM_TJLMS_SHOW_BOTH_FILTER</option>
				<option value="none">COM_TJLMS_NONE_OPTION</option>
			</field>

			<field name="category" type="radio"  default="basic" description="COM_TJLMS_FILTER_CATEGORY_FILTER_DESC" label="COM_TJLMS_FILTER_CATEGORY_FILTER" class="btn-group btn-group-yesno radio">
				<option value="advanced">COM_TJLMS_SHOW_ADVANCED_FILTER</option>
				<option value="basic">COM_TJLMS_SHOW_BASIC_FILTER</option>
				<option value="none">COM_TJLMS_NONE_OPTION</option>
			</field>
			<field name="creator" type="radio"  default="none" description="COM_TJLMS_FILTER_COURSE_CREATOR_FILTER_DESC" label="COM_TJLMS_FILTER_COURSE_CREATOR_FILTER" class="btn-group btn-group-yesno radio">
				<option value="advanced">COM_TJLMS_SHOW_ADVANCED_FILTER</option>
				<option value="basic">COM_TJLMS_SHOW_BASIC_FILTER</option>
				<option value="none">COM_TJLMS_NONE_OPTION</option>
			</field>
			<field name="course_status" type="radio"  default="basic" description="COM_TJLMS_FILTER_COURSE_STATUS_FILTER_DESC" label="COM_TJLMS_FILTER_COURSE_STATUS_FILTER" class="btn-group btn-group-yesno radio">
				<option value="advanced">COM_TJLMS_SHOW_ADVANCED_FILTER</option>
				<option value="basic">COM_TJLMS_SHOW_BASIC_FILTER</option>
				<option value="none">COM_TJLMS_NONE_OPTION</option>
			</field>
			<field name="course_type" type="radio"  default="1" description="COM_TJLMS_FILTER_COURSE_TYPE_FILTER_DESC" label="COM_TJLMS_FILTER_COURSE_TYPE_FILTER" class="btn-group btn-group-yesno radio" >
				<option value="advanced">COM_TJLMS_SHOW_ADVANCED_FILTER</option>
				<option value="basic">COM_TJLMS_SHOW_BASIC_FILTER</option>
				<option value="none">COM_TJLMS_NONE_OPTION</option>
			</field>
			<field name="filter_tag" type="radio"  default="none" description="COM_TJLMS_FILTER_COURSE_TAG_FILTER_DESC" label="COM_TJLMS_FILTER_COURSE_TAG_FILTER" class="btn-group btn-group-yesno radio">
				<option value="advanced">COM_TJLMS_SHOW_ADVANCED_FILTER</option>
				<option value="basic">COM_TJLMS_SHOW_BASIC_FILTER</option>
				<option value="none">COM_TJLMS_NONE_OPTION</option>
			</field>
			<field name="filter_customfields" type="radio"  default="none" description="COM_TJLMS_FILTER_CUSTOM_FIELDS_FILTER_DESC" label="COM_TJLMS_FILTER_CUSTOM_FIELDS_FILTER" class="btn-group btn-group-yesno radio">
				<option value="advanced">COM_TJLMS_SHOW_ADVANCED_FILTER</option>
				<option value="basic">COM_TJLMS_SHOW_BASIC_FILTER</option>
				<option value="none">COM_TJLMS_NONE_OPTION</option>
			</field>
			<field name="pin_view_config_set"  type="radio" label="COM_TJLMS_MENU_PIN_VIEW_CONFIGS" description="COM_TJLMS_MENU_PIN_VIEW_CONFIGS_DESC" class="btn-group" default="0">
				<option value='1'>JYES</option>
				<option value='0'>JNO</option>
			</field>
			<!-- <field name="pin_view_type" type="radio" showon="pin_view_config_set:1" label="COM_TJLMS_MENU_COURSE_TYPE" description="COM_TJLMS_MENU_COURSE_TYPE_DESC" class="btn-group" default="0">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field> -->
			<field name="pin_view_likes" class="btn-group" type="radio" showon="pin_view_config_set:1" default="1" description="COM_TJLMS_MENU_PIN_VIEW_LIKES_DESC" label="COM_TJLMS_MENU_PIN_VIEW_LIKES">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
			</field>
			<!-- <field name="pin_view_comments" class="btn-group" type="radio" showon="pin_view_config_set:1" default="0" description="COM_TJLMS_MENU_PIN_VIEW_COMMENTS_DESC" label="COM_TJLMS_MENU_PIN_VIEW_COMMENTS">
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field> -->
			<field name="pin_view_enrollments" type="radio" showon="pin_view_config_set:1" label="COM_TJLMS_MENU_PIN_VIEW_ENROLLMENTS" description="COM_TJLMS_MENU_PIN_VIEW_ENROLLMENTS_DESC" class="btn-group" default="1">
				<option value='1'>JYES</option>
				<option value='0'>JNO</option>
			</field>
			<field name="pin_view_category" type="radio" showon="pin_view_config_set:1" label="COM_TJLMS_MENU_PIN_VIEW_CATEGORY" description="COM_TJLMS_MENU_PIN_VIEW_CATEGORY_DESC" class="btn-group" default="1">
				<option value='1'>JYES</option>
				<option value='0'>JNO</option>
			</field>
			<field name="pin_view_tags" type="radio" showon="pin_view_config_set:1" label="COM_TJLMS_MENU_PIN_VIEW_TAGS" description="COM_TJLMS_MENU_PIN_VIEW_TAGS_DESC" class="btn-group" default="0">
				<option value='1'>JYES</option>
				<option value='0'>JNO</option>
			</field>

		</fieldset>
	</fields>

	<state>
		<name>All Courses</name>
		<description>All Courses</description>
	</state>

</metadata>
