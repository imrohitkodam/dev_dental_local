<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter" >
		<field
			name="search"
			type="text"
			label="JSEARCH_FILTER_SUBMIT"
			hint="COM_TJLMS_SEARCH_BY_LESSON_NAME"
			description="JSEARCH_FILTER_SUBMIT"
		/>
		<field
			name="course"
			type="courselist"
			label="TJLMS_SELECT_COURSE"
			description="COM_TMT_SELECT_LEVEL_DESC"
			onchange="this.form.submit();"
			>
		</field>
		<field
			name="lesson"
			type="assesslessonlist"
			label="TJLMS_SELECT_LESSON"
			description="COM_TMT_SELECT_LEVEL_DESC"
			onchange="this.form.submit();"
			>
		</field>
		<field
			name="status"
			type="list"
			label="COM_TJLMST_FILTER_PUBLISHED"
			description="COM_TJLMST_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
			<option value="ap">COM_TJLMS_ASSESSMENTS_AP</option>
			<option value="completed">COM_TJLMS_LESSON_STATUS_COMPLETED</option>
			<option value="failed">COM_TJLMS_LESSON_STATUS_FAILED</option>
			<option value="passed">COM_TJLMS_LESSON_STATUS_PASSED</option>

		</field>

		<field 
			name="attempt_starts" 
			type="calendar" 
			onchange="this.form.submit();" 
			hint='COM_TJLMST_FILTER_DATE_ATTEMPT_FROM' 
			label="Select a date" 
			default="" 
			description="" 
			format="%d-%m-%Y" 
			filter = "user_utc" 
		/>
		<field 
			name="attempt_ends" 
			type="calendar" 
			onchange="this.form.submit();" 
			hint='COM_TJLMST_FILTER_DATE_ATTEMPT_TO' 
			label="Select a date" 
			default="" 
			description="" 
			format="%d-%m-%Y" 
			filter = "user_utc" 
		/>
		<field
			name="lessontype"
			type="list"
			label="TJLMS_SELECT_LESSON_TYPE"
			description="COM_TMT_SELECT_LEVEL_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_LESSION_TYPE</option>
			<option value="quiz">COM_TJLMS_QUIZ</option>
			<option value="exercise">COM_TJLMS_EXERCISE</option>
			<option value="feedback">COM_TJLMS_FEEDBACK</option>

		</field>
	</fields>

	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_TJLMST_LIST_LIMIT"
			description="COM_TJLMST_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>

