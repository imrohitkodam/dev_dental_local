<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
	<name>COM_MIJOSQL</name>
	<author>Mijosoft LLC</author>
	<creationDate>October 2012</creationDate>
	<authorEmail>info@mijosoft.com</authorEmail>
	<authorUrl>http://mijosoft.com</authorUrl>
	<copyright>Copyright (C) Mijosoft LLC, mijosoft.com</copyright>
	<license>GNU/GPL, http://www.gnu.org/licenses/gpl-2.0.html</license>
	<version>1.1.1</version>
	<description>MijoSQL is a simple and fast database management component. It operates executing SQL queries so you don't have to access phpMyAdmin anymore.</description>
	
	<administration>
		<menu img="components/com_mijosql/assets/images/icon-16-mijosql.png">COM_MIJOSQL</menu>
		<submenu>
	    	<menu link="option=com_mijosql" img="components/com_mijosql/assets/images/icon-16-run.png">COM_MIJOSQL_RUN_QUERY</menu>
	    	<menu link="option=com_mijosql&amp;controller=queries" img="components/com_mijosql/assets/images/icon-16-savedqueries.png">COM_MIJOSQL_SAVED_QUERIES</menu>
	    </submenu>
		
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>index.html</filename>
			<filename>install.sql</filename>
			<filename>mijosql.php</filename>
			<filename>toolbar.php</filename>
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>mvc</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
		
		<languages folder="languages">
			<language tag="en-GB">en-GB.com_mijosql.ini</language>
			<language tag="en-GB">en-GB.com_mijosql.sys.ini</language>
			<language tag="en-GB">en-GB.com_mijosql.menu.ini</language>
		</languages>
	</administration>
	
	<scriptfile>script.php</scriptfile>
	
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.sql</file>
			<file charset="utf8" driver="mysqli">install.sql</file>
		</sql>
	</install>
	
	<updateservers>
		<server type="extension" priority="1" name="MijoSQL Updates">http://mijosoft.com/joomla_updates.xml</server>
	</updateservers>
</extension>