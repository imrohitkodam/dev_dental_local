<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter" >
		 <field
			name="search"
			type="text"
			label="COM_QUICK2CART_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
		<field
			name="state"
			type="list"
			label="COM_TJLMST_FILTER_PUBLISHED"
			description="COM_TJLMST_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="-2">JTRASHED</option>
		</field>
	</fields>


	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_TJLMST_LIST_LIMIT"
			description="COM_TJLMST_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
