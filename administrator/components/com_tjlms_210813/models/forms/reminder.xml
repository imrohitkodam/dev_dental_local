<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_TJLMS_FORM_LBL_REMINDER_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" />

       <field name="created_by" type="createdby" default=""
            label="COM_TJLMS_FORM_LBL_REMINDER_CREATED_BY"
            description="COM_TJLMS_FORM_DESC_REMINDER_CREATED_BY"  />

       <field name="modified_by" type="modifiedby" default=""
            label="COM_TJLMS_FORM_LBL_REMINDER_MODIFIED_BY"
            description="COM_TJLMS_FORM_DESC_REMINDER_MODIFIED_BY"  />

       <field name="title" type="text" size="40" class="inputbox"

            label="COM_TJLMS_FORM_LBL_REMINDER_TITLE"
            description="COM_TJLMS_FORM_DESC_REMINDER_TITLE"


                                                     required="true"
                                                    filter="safehtml" />

       <field name="description" type="textarea" buttons="true"
        class="inputbox"
        filter="safehtml"




            label="COM_TJLMS_FORM_LBL_REMINDER_DESCRIPTION"
            description="COM_TJLMS_FORM_DESC_REMINDER_DESCRIPTION"  />

       <field name="days" default="1" min="1" onchange="number()" type="number" size="40" class="inputbox"

            label="COM_TJLMS_FORM_LBL_REMINDER_DAYS"
            description="COM_TJLMS_FORM_DESC_REMINDER_DAYS"


                                                     required="true"
                                                    filter="safehtml" />
                                                    <field
			name="subject"
			type="text"
			label="COM_TJLMS_FORM_LBL_REMINDER_SUBJECT"
			description="COM_TJLMS_FORM_DESC_REMINDER_SUBJECT"
			required="true"
		/>
		<field
			name="css"
			type="textarea"
			label="COM_JTICKETING_FORM_LBL_REMINDER_CSS"
			description="COM_JTICKETING_FORM_DESC_REMINDER_CSS"
			rows="10"
			cols="90"
			option_on="Yes"
			option_off="Yes"
		/>


       <field name="email_template" type="editor" buttons="true" width="90%" height="250px"
		class="inputbox"
		filter="JComponentHelper::filterText"
		label="COM_TJLMS_FORM_LBL_REMINDER_EMAIL_TEMPLATE"
		description="COM_TJLMS_FORM_DESC_REMINDER_EMAIL_TEMPLATE"  />

