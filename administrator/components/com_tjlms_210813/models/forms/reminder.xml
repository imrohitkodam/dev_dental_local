		<field name="version_note"
			type="text"
			label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
			description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
			class="inputbox" size="45"
			labelclass="control-label"
		/>
-->
			<!-- Added by Deepali to Select course-->
		<field default="" class="inputbox required" for="jform_select_course" description="COM_TJLMS_FORM_DESC_SELECT_COURSE" label="COM_TJLMS_FORM_LBL_SELECT_COURSE" name="select_course" type="selectcourses" multiple="true" required="required">
		</field>


		<field
			name="state"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="inputbox"
			size="1"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field name="checked_out" type="hidden" filter="unset" />
		<field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
