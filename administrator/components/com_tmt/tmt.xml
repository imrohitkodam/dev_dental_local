			<folder>tables</folder>
			<folder>views</folder>
			<folder>includes</folder>
			<filename>deletelist.php</filename>
		</files>
		<languages folder="admin/language">
			<language tag="en-GB">en-GB/en-GB.com_tmt.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_tmt.sys.ini</language>
		</languages>
	</administration>
</extension>
