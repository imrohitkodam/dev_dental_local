<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<extension type="component" version="3.0" method="upgrade">
	<name>com_tmt</name>
	<creationDate>10th Oct 2025</creationDate>
	<author>Techjoomla</author>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>https://techjoomla.com</authorUrl>
	<version>5.1.3</version>
	<description>Test Management Tool</description>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>

	<scriptfile>script.tmt.php</scriptfile>

	<files folder="site">
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>views</folder>
		<folder>assets</folder>
		<folder>helpers</folder>
		<folder>image</folder>
		<folder>layouts</folder>
		<filename>defines.php</filename>
		<filename>router.php</filename>
		<filename>helper.php</filename>
		<filename>tmt.php</filename>
		<filename>controller.php</filename>
		<filename>sample-qa-import-quiz.csv</filename>
		<filename>sample-qa-import-exercise-feedback.csv</filename>
		<filename>index.html</filename>
	</files>

	<languages folder="site/language">
		<language tag="en-GB">en-GB/en-GB.com_tmt.ini</language>
	</languages>

	<!-- Media files -->
	<media destination="com_tmt" folder="media">
		<folder>css</folder>
		<folder>js</folder>
		<folder>vendors</folder>
		<folder>dist</folder>
		<filename>package.json</filename>
		<filename>webpack.common.js</filename>
		<filename>webpack.dev.js</filename>
		<filename>webpack.prod.js</filename>
	</media>

