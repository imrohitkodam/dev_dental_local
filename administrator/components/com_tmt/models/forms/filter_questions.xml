<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter" >
		<field
			name="search"
			type="text"
			label="JSEARCH_FILTER_SUBMIT"
			hint="JSEARCH_FILTER_QUESTION"
			description="JSEARCH_FILTER_SUBMIT"
		/>
		<field
			name="level"
			type="tmtdifficultylevels"
			label="COM_TMT_SELECT_LEVEL"
			description="COM_TMT_SELECT_LEVEL_DESC"
			onchange="this.form.submit();"
			>

		</field>
		<field
			name="category"
			type="tmtcategories"
			label="COM_TMT_SELECT_CATEGORY"
			description="COM_TMT_SELECT_CATEGORY_DESC"
			onchange="this.form.submit();"
			>

		</field>
		<field
			name="type"
			type="tmtqTypes"
			label="COM_TMT_SELECT_QTYPE"
			description="COM_TMT_SELECT_QTYPE_DESC"
			onchange="this.form.submit();"
			>

		</field>

		<field
			name="state"
			type="list"
			label="COM_TJLMST_FILTER_PUBLISHED"
			description="COM_TJLMST_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
			validate="options"
			default=""
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field
			name="gradingtype"
			type="list"
			label="COM_TJLMST_FILTER_PUBLISHED"
			description="COM_TJLMST_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">COM_TMT_OPTION_SELECT_QUIZ_TYPE</option>
			<option value="quiz">COM_TMT_QUIZ</option>
			<option value="exercise">COM_TMT_EXERCISE</option>
			<option value="feedback">COM_TMT_FEEDBACK</option>
		</field>
	</fields>

	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_TJLMST_LIST_LIMIT"
			description="COM_TJLMST_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
