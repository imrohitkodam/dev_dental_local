<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter" >
		<field
			name="search"
			type="text"
			label="COM_TJLMST_FILTER_SEARCH_DESC_MENROLLMENT"
			hint="COM_TJLMST_FILTER_SEARCH_RPORTS_DESC_NAME"
			description="COM_TJLMST_FILTER_SEARCH_DESC_REPORTS_MENROLLMENT"
		/>
		<field
			name="userfilter"
			type="users"
			label="COM_TJLMST_FILTER_SELECT_USER"
			description="COM_TJLMST_FILTER_SELECT_USER_DESC"
			onchange="this.form.submit();"
			>
			<option value="">COM_TJLMS_FILTER_SELECT_USER</option>
		</field>
		<field
			name="coursefilter"
			type="courses"
			label="COM_TJLMST_FILTER_SELECT_COURSE"
			description="COM_TJLMST_FILTER_SELECT_COURSE_DESC"
			onchange="this.form.submit();"
			>
			<option value="">COM_TJLMS_FILTER_SELECT_COURSE</option>
		</field>
		<field
			name="lessonfilter"
			type="lessons"
			label="COM_TJLMST_FILTER_SELECT_LESSON"
			description="COM_TJLMST_FILTER_SELECT_LESSON_DESC"
			onchange="this.form.submit();"
			>
			<option value="">COM_TJLMS_FILTER_SELECT_LESSON</option>
		</field>
		<field
			name="statusfilter"
			type="list"
			label="COM_TJLMST_FILTER_SELECT_STATUS"
			description="COM_TJLMST_FILTER_SELECT_STATUS_DESC"
			onchange="this.form.submit();"
			>
			<option value="">COM_TJLMS_FILTER_SELECT_STATUS</option>
			<option value="started">COM_TJLMS_FILTER_STATUS_STARTED</option>
			<option value="passed">COM_TJLMS_FILTER_STATUS_PASSED</option>
			<option value="failed">COM_TJLMS_FILTER_STATUS_FAILED</option>
			<option value="completed">COM_TJLMS_FILTER_STATUS_COMPLETED</option>
			<option value="incomplete">COM_TJLMS_LESSONSTATUS_INCOMPLETE</option>
			<option value="AP">COM_TMT_ASSESSMENT_PENDING</option>
		</field>
		<field
			name="attemptState"
			type="list"
			label="COM_TJLMST_FILTER_SELECT_STATE"
			description="COM_TJLMST_FILTER_SELECT_STATE_DESC"
			onchange="this.form.submit();"
			>
			<option value="">COM_TJLMS_FILTER_SELECT_STATE</option>
			<option value="1">COM_TJLMS_FILTER_STATE_ACTIVE</option>
			<option value="0">COM_TJLMS_FILTER_STATE_EXPIRED</option>
		</field>
		<field name="attempt_starts" type="calendar" onchange="submitFromCalendar(this);" hint='COM_TJLMST_FILTER_DATE_ATTEMPT_FROM' label="Select a date" default="" description="" format="%d-%m-%Y" class="validate-dmy-date" />
		<field name="attempt_ends" type="calendar" onchange="submitFromCalendar(this);" hint='COM_TJLMST_FILTER_DATE_ATTEMPT_TO' label="Select a date" default="" description="" format="%d-%m-%Y" class="validate-dmy-date" />

			<field
			name="lesonformat"
			type="list"
			label="COM_TJLMS_FILTER_SELECT_LESSON_FORMAT"
			description="COM_TJLMS_FILTER_SELECT_LESSON_FORMAT"
			onchange="this.form.submit();"
			>
			<option value="">COM_TJLMS_FILTER_SELECT_LESSON_FORMAT</option>
			<option value="tmtQuiz">COM_TJLMS_QUIZ</option>
			<option value="textmedia">COM_TJLMS_TEXT_N_MEDIA_LESSON</option>
			<option value="scorm">COM_TJLMS_SCROM_LESSON</option>
			<option value="video">COM_TJLMS_VIDEO_LESSON</option>
			<option value="document">COM_TJLMS_DOCUMENT_LESSON</option>
			<option value="htmlzips">COM_TJLMS_HTMLZIPS_LESSON</option>
			<option value="externaltool">COM_TJLMS_EXTERNALTOOL_LESSON</option>
			<option value="event">COM_TJLMS_EVENT_LESSON</option>
			</field>
		</fields>

	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_TJLMST_LIST_LIMIT"
			description="COM_TJLMST_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
