		<field
			name="actionfilter"
			type="list"
			label="COM_TJLMST_FILTER_SELECT_STATUS"
			description="COM_TJLMST_FILTER_SELECT_STATUS_DESC"
			onchange="this.form.submit();"
			>
			<option value="">COM_TJLMS_SELONE_ACTION</option>
			<option value="LOGIN">COM_TJLMS_ACTION_LOGIN</option>
			<option value="LOGOUT">COM_TJLMS_ACTION_LOGOUT</option>
