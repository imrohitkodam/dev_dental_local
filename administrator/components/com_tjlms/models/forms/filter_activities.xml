			<option value="RECOMMENDED">COM_TJLMS_ACTION_COURSE_RECOMMENDED</option>
			<option value="COURSE_COMPLETED">COM_TJLMS_ACTION_COURSE_COURSE_COMPLETED</option>
			<option value="CERTIFICATE_EXPIRED">COM_TJLMS_ACTION_COURSE_CERTIFICATE_EXPIRED</option>
		</field>

		<field
			name="userfilter"
			type="users"
			label="COM_TJLMST_FILTER_SELECT_USER"
			description="COM_TJLMST_FILTER_SELECT_USER_DESC"
			onchange="this.form.submit();"
			>
			<option value="">COM_TJLMS_FILTER_SELECT_USER</option>
		</field>


	</fields>

	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			label="COM_TJLMST_LIST_LIMIT"
			description="COM_TJLMST_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
