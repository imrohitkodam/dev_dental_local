<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>Payplans - Plan</name>
	<version>5.0.6</version>
	<creationDate>13th October 2022</creationDate>
	<author>StackIdeas</author>
	<authorEmail>support@stackideas.com</authorEmail>
	<authorUrl>https://stackideas.com</authorUrl>
	<copyright>Copyright Stack Ideas Sdn Bhd. All Rights Reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>MOD_PAYPLANS_PLAN_DESC</description>
	<files>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename module="mod_payplans_plan">mod_payplans_plan.php</filename>
		<filename>mod_payplans_plan.xml</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="plan_ids" type="sql" multiple="true" query="SELECT plan_id AS value, title AS plan_ids FROM #__payplans_plan WHERE published = 1" label="MOD_PAYPLANS_PLAN_SELECT_PLANS" description="MOD_PAYPLANS_PLAN_SELECT_PLANS_DESC" />

				<field  name="return_url" 
						type="text" 
						default="" 
						label="MOD_PAYPLANS_PLAN_RETURN_URL" 
						description="MOD_PAYPLANS_PLAN_RETURN_URL_DESC" />
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" priority="1" name="StackIdeas Modules and Plugins">https://stackideas.com/joomla4compat.xml</server>
	</updateservers>
</extension>
