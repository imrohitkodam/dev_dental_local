	<config name="params">
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_SUFIX" description="MOD_LMS_COURSE_BLOCKS_MODULECLASS_SFX_DESC" />
			</fieldset>
		</fields>
	</config>

	<!--SETTING default param -->
	<config>
		<fields>
			<fieldset>
				<field name="moduleclass_sfx" default="1" />
			</fieldset>
		</fields>
	</config>

</extension>
