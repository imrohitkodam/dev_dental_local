<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="module" client="site" method="upgrade">
	<name>EasySocial Profiles Advanced Search Map</name>
	<author>Stack Ideas Sdn Bhd</author>
	<creationDate>24th April 2023</creationDate>
	<copyright>Copyright (C) Stack Ideas Sdn Bhd. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@stackideas.com</authorEmail>
	<authorUrl>http://stackideas.com</authorUrl>
	<version>1.0.6</version>
	<description><![CDATA[MOD_ES_ADVANCEDSEARCH_MAP_DESC]]></description>
	<files>
		<folder>assets</folder>
		<folder>scripts</folder>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename module="mod_easysocial_advancedsearch_map">mod_easysocial_advancedsearch_map.php</filename>
		<filename>mod_easysocial_advancedsearch_map.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_easysocial_advancedsearch_map.ini</language>
		<language tag="en-GB">en-GB.mod_easysocial_advancedsearch_map.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_easysocial/models/fields">
				<field name="note_googlemap" type="easysocial_note" class="alert alert-info" label="MOD_ES_ADVANCEDSEARCH_MAP_NOTICE" description="MOD_ES_ADVANCEDSEARCH_MAP_NOTICE_DESC" />
				<field name="addresskey" type="text" default="ADDRESS" label="MOD_ES_ADVANCEDSEARCH_MAP_ADDRESS_KEY" description="MOD_ES_ADVANCEDSEARCH_MAP_ADDRESS_KEY_DESC" />
				<field name="count" type="text" default="50" label="MOD_ES_ADVANCEDSEARCH_MAP_COUNT" description="MOD_ES_ADVANCEDSEARCH_MAP_COUNT_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="textarea" rows="3" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="0" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" priority="1" name="StackIdeas Modules and Plugins">https://stackideas.com/joomla4compat.xml</server>
	</updateservers>
</extension>
