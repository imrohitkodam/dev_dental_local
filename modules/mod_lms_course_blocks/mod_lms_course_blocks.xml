<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="module" client ="site" method="upgrade">
	<name>mod_lms_course_blocks</name>
	<author>Techjoomla</author>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>https://techjoomla.com</authorUrl>
	<copyright>Copyright (C) 2014 - 2025 Techjoomla. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<creationDate>10th Oct 2025</creationDate>
	<version>5.1.3</version>
	<description>MOD_LMS_BLOCKS_DESC</description>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_lms_course_blocks.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_lms_course_blocks.sys.ini</language>
	</languages>

	<files>
		<filename module="mod_lms_course_blocks">mod_lms_course_blocks.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>

	<media folder="media" destination="mod_lms_course_blocks">
		<folder>css</folder>
	</media>

	<!-- Fields for Joomla 1.8.x and onwards -->
	<config name="params">
		<fields name="params">
			<fieldset name="basic">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_SUFIX" description="MOD_LMS_COURSE_BLOCKS_MODULECLASS_SFX_DESC" />
				<field name="progress" type="radio"  default="1" description="MOD_LMS_BLOCKS_PROGRESS_DESC" label="MOD_LMS_BLOCKS_PROGRESS" >
					<option value="1">MOD_LMS_BLOCKS_SHOW</option>
					<option value="0">MOD_LMS_BLOCKS_HIDE</option>
				</field>
				<field name="info" type="radio"  default="1" description="MOD_LMS_BLOCKS_INFO_DESC" label="MOD_LMS_BLOCKS_INFO" >
					<option value="1">MOD_LMS_BLOCKS_SHOW</option>
					<option value="0">MOD_LMS_BLOCKS_HIDE</option>
				</field>
				<field name="assign_user" type="radio"  default="1" description="MOD_LMS_BLOCKS_ASSIGNUSER_DESC" label="MOD_LMS_BLOCKS_ASSIGNUSER" >
					<option value="1">MOD_LMS_BLOCKS_SHOW</option>
					<option value="0">MOD_LMS_BLOCKS_HIDE</option>
				</field>
				<field name="taught_by" type="radio"  default="1" description="MOD_LMS_BLOCKS_TAUGHTBY_DESC" label="MOD_LMS_BLOCKS_TAUGHTBY" >
					<option value="1">MOD_LMS_BLOCKS_SHOW</option>
					<option value="0">MOD_LMS_BLOCKS_HIDE</option>
				</field>
				<field name="recommend" type="radio"  default="1" description="MOD_LMS_BLOCKS_RECOMMEND_USER_DESC" label="MOD_LMS_BLOCKS_RECOMMEND_USER" >
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="group_info" type="radio"  default="1" description="MOD_LMS_BLOCKS_GROUPINFO_DESC" label="MOD_LMS_BLOCKS_GROUPINFO" >
					<option value="1">MOD_LMS_BLOCKS_SHOW</option>
					<option value="0">MOD_LMS_BLOCKS_HIDE</option>
				</field>
				<field name="enrolled" type="radio"  default="1" description="MOD_LMS_BLOCKS_ENROLL_DESC" label="MOD_LMS_BLOCKS_ENROLL" >
					<option value="1">MOD_LMS_BLOCKS_SHOW</option>
					<option value="0">MOD_LMS_BLOCKS_HIDE</option>
				</field>
				<field name="fields" type="radio"  default="0" description="MOD_LMS_COURSE_FIELDS_DESC" label="MOD_LMS_COURSE_FIELDS_LABEL" >
					<option value="1">MOD_LMS_BLOCKS_SHOW</option>
					<option value="0">MOD_LMS_BLOCKS_HIDE</option>
				</field>
			</fieldset>
		</fields>
	</config>

	<!--SETTING default param -->
	<config>
		<fields>
			<fieldset>
				<field name="moduleclass_sfx" default="1" />
				<field name="progress" default="1" />
				<field name="info" default="1" />
				<field name="assign_user" default="1" />
				<field name="taught_by" default="1" />
				<field name="user_menu" default="1" />
				<field name="group_info" default="1" />
				<field name="enrolled" default="1" />
			</fieldset>
		</fields>
	</config>

</extension>
