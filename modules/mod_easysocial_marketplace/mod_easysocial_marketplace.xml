<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="module" client="site" method="upgrade">
	<name>EasySocial Marketplace</name>
	<author>Stack Ideas Sdn Bhd</author>
	<creationDate>24th April 2023</creationDate>
	<copyright>Copyright (C) Stack Ideas Sdn Bhd. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@stackideas.com</authorEmail>
	<authorUrl>http://stackideas.com</authorUrl>
	<version>4.0.27</version>
	<description><![CDATA[MOD_EASYSOCIAL_MARKETPLACE_DESC]]></description>
	<files>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename module="mod_easysocial_marketplace">mod_easysocial_marketplace.php</filename>
		<filename>mod_easysocial_marketplace.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_easysocial_marketplace.ini</language>
		<language tag="en-GB">en-GB.mod_easysocial_marketplace.sys.ini</language>
	</languages>

	<config>
		<fields name="params" addfieldpath="/administrator/components/com_easysocial/models/fields">
			<fieldset name="basic">
				<field name="filter" type="list" class="input-xxlarge" default="0" label="MOD_EASYSOCIAL_MARKETPLACES_FILTER_TYPE" description="MOD_EASYSOCIAL_MARKETPLACES_FILTER_TYPE_DESC">
					<option value="0">MOD_EASYSOCIAL_MARKETPLACES_NO_FILTERING</option>
					<option value="2">MOD_EASYSOCIAL_MARKETPLACES_FILTER_FEATURED</option>
					<option value="3">MOD_EASYSOCIAL_MARKETPLACES_FILTER_LOGGED_IN_USER</option>
				</field>
				<field
					name="category"
					type="sql"
					multiple="true"
					query="SELECT id AS value, title AS category FROM #__social_marketplaces_categories WHERE state = 1"
					label="MOD_EASYSOCIAL_MARKETPLACES_CATEGORY_FILTER"
					description="MOD_EASYSOCIAL_MARKETPLACES_CATEGORY_FILTER_DESC"
				/>
				<field name="ordering" type="list" default="latest" label="MOD_EASYSOCIAL_MARKETPLACES_ORDERING" description="MOD_EASYSOCIAL_MARKETPLACES_ORDERING_DESC">
					<option value="latest">MOD_EASYSOCIAL_MARKETPLACES_ORDERING_LATEST</option>
					<option value="popular">MOD_EASYSOCIAL_MARKETPLACES_ORDERING_POPULAR</option>
					<option value="random">MOD_EASYSOCIAL_MARKETPLACES_ORDERING_RANDOM</option>
				</field>
				<field name="display_alllink" type="radio" class="btn-group" default="1" label="MOD_ES_MARKETPLACES_DISPLAY_ALL_LINK" description="MOD_ES_MARKETPLACES_DISPLAY_ALL_LINK_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="display_limit" type="text" default="5" class="input-mini text-center" label="MOD_EASYSOCIAL_MARKETPLACES_DISPLAY_LIMIT" description="MOD_EASYSOCIAL_MARKETPLACES_DISPLAY_LIMIT_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="moduleclass_sfx" type="textarea" rows="3" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="0" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" priority="1" name="StackIdeas Modules and Plugins">https://stackideas.com/joomla4compat.xml</server>
	</updateservers>
</extension>