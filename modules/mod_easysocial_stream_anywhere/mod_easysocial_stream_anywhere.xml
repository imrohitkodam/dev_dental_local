<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="module" client="site" method="upgrade">
	<name>EasySocial Stream Anywhere</name>
	<author>Stack Ideas Sdn Bhd</author>
	<creationDate>13th March 2020</creationDate>
	<copyright>Copyright (C) 2009 - 2020 Stack Ideas Sdn Bhd. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@stackideas.com</authorEmail>
	<authorUrl>http://stackideas.com</authorUrl>
	<version>2.0.3</version>
	<description><![CDATA[MOD_EASYSOCIAL_STREAM_ANYWHERE_DESC]]></description>
	<files>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename module="mod_easysocial_stream_anywhere">mod_easysocial_stream_anywhere.php</filename>
		<filename>mod_easysocial_stream_anywhere.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_easysocial_stream_anywhere.ini</language>
		<language tag="en-GB">en-GB.mod_easysocial_stream_anywhere.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="story_form" type="radio" class="btn-group" default="1" label="MOD_EASYSOCIAL_STREAM_ANYWHERE_DISPLAY_STORY" description="MOD_EASYSOCIAL_STREAM_ANYWHERE_DISPLAY_STORY_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="total" type="text" class="input-mini text-center" default="10" label="MOD_EASYSOCIAL_STREAM_ANYWHERE_TOTAL" description="MOD_EASYSOCIAL_STREAM_TOTAL_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="textarea" rows="3" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="0" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" priority="1" name="StackIdeas Modules and Plugins">https://stackideas.com/joomla4compat.xml</server>
	</updateservers>
</extension>
