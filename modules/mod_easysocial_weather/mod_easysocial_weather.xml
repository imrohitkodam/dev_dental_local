<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="module" client="site" method="upgrade">
	<name>EasySocial Weather</name>
	<author>Stack Ideas Sdn Bhd</author>
	<creationDate>13th November 2017</creationDate>
	<copyright>Copyright (C) 2009 - 2017 Stack Ideas Sdn Bhd. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@stackideas.com</authorEmail>
	<authorUrl>http://stackideas.com</authorUrl>
	<version>2.1.7</version>
	<description><![CDATA[MOD_ES_WEATHER_DESC]]></description>
	<files>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename module="mod_easysocial_weather">mod_easysocial_weather.php</filename>
		<filename>mod_easysocial_weather.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_easysocial_weather.ini</language>
		<language tag="en-GB">en-GB.mod_easysocial_weather.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_easysocial/models/fields">
				<field name="api_key" type="text" class="" default="" label="MOD_ES_WEATHER_APP_ID" description="MOD_ES_WEATHER_APP_ID_DESC" />

				<field name="tempUnit" type="radio" class="btn-group" default="c" label="MOD_ES_WEATHER_TEMPERATURE" description="MOD_ES_WEATHER_TEMPERATURE_DESC">
					<option value="metric">MOD_ES_WEATHER_CELCIUS</option>
					<option value="imperial">MOD_ES_WEATHER_FAHRENHEIT</option>
				</field>

				<field name="address_key" type="text" class="" default="ADDRESS" label="MOD_ES_WEATHER_ADDRESS_KEY" description="MOD_ES_WEATHER_ADDRESS_KEY_DESC" />
				
				<field name="default_address" class="" type="textarea" rows="3" cols="30" default="" label="MOD_ES_WEATHER_DEFAULT_ADDRESS" description="MOD_ES_WEATHER_DEFAULT_ADDRESS_DESC" />
			</fieldset>

			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="textarea" rows="3" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="0" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" priority="1" name="StackIdeas Modules and Plugins">https://stackideas.com/joomla4compat.xml</server>
	</updateservers>
</extension>