	<config name="params">
		<fields name="params">
			<fieldset name="basic">
				<field
					name="limit"
					type="text" default="0"
					label="MOD_LMS_TAG_LESSONS_LIMIT"
					description="MOD_LMS_TAG_LESSONS_FETCH_LIMIT_DESC"
				/>

				<field
					name="displayLimit"
					type="text"
					default="4"
					label="MOD_LMS_TAG_LESSONS_DISPLAY_LIMIT"
					description="MOD_LMS_TAG_LESSONS_DISPLAY_LIMIT_DESC"
				/>


				<field
					name="lesson_category"
					type="category"
					default="0"
					label="MOD_LMS_TAG_LESSONS_CATEGORY"
					multiple="true"
					description="MOD_LMS_TAG_LESSONS_CATEGORY_DESC"
					key_field='id'
					value_field='title'
					extension="com_tjlms.lessons"
				/>
				<field
					name="tags"
					type="tag"
					label="JTAG"
					description="JTAG_DESC"
					class="inputbox span4"
					multiple="true"
				/>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>
			</fieldset>
		</fields>
	</config>
